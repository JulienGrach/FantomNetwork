<%- include partials/header %>

<div id="mainUser" class="main">

    <div class="userPageHead">

        <div class="backgroundWrapper">
            <div class="img" style="background-image: url('<%=user.coverPic%>')"></div>
        </div>
        <div class="introduce">
            <h3><%=user.username%></h3>
            <div class="introduceTitles">
                <%if(client.userId == user.id){%>
                    <div class="button buttonModifyIntroduce"><div id="textAreaButton" class="img"></div></div>
                <%}%>
                <%if(user.birthday != null){%><span><%=moment(user.birthday).format('D/M/yyyy')%></span><%}%>
            </div>

            <p class="paragIntroduce"><%=user.introduce%></p>

            <form class="formIntroduce" action="/posts" method="post">
                <input type="hidden" name="_method" value="PUT">
                <input type="hidden" name="_table" value="user">
                <input type="hidden" name="_id" value="<%=user.id%>">
                <input type="hidden" name="_owner" value="<%=user.id%>">
                <textarea class="introduceTextArea" title="introduce" name="introduceModify"><%=user.introduce%></textarea>
                <input id="introduceSubmit" class="button" type="submit" value="OK">
            </form>
        </div>
    </div>

    <%articles.forEach(function(article){%>
        <div class="userArticle">
            <%- include partials/article %>
        </div>
    <%})%>

</div>

<script type="text/javascript" src="/assets/js/articlesCountHeight.js"></script>
<script type="text/javascript" src="/assets/js/userModifyIntroduce.js"></script>
<script type="text/javascript" src="/assets/js/modifyContentForm.js"></script>


<%- include partials/footer %>